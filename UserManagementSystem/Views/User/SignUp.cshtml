@model UserManagementSystem.Models.SignupViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="container mt-5" style="max-width: 700px; border: 1px solid black; padding: 20px; position: relative;">
    <div style="position: absolute; top: -20px; left: 10px; background: white; padding: 0 10px; font-weight: 600;">
        Sign Up
    </div>

    <form asp-action="Signup" method="post">
        <input type="hidden" asp-for="NewUser.Id" />
        <div class="row mb-3 align-items-center">
            <label asp-for="NewUser.UserName" class="col-sm-4 col-form-label fw-bold">
                <span class="text-danger">*</span> User Name
            </label>
            <div class="col-sm-8">
                <input asp-for="NewUser.UserName" class="form-control" />
                <span asp-validation-for="NewUser.UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label asp-for="NewUser.Password" class="col-sm-4 col-form-label fw-bold">
                <span class="text-danger">*</span> Password
            </label>
            <div class="col-sm-8">
                <input asp-for="NewUser.Password" type="password" class="form-control" />
                <span asp-validation-for="NewUser.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label asp-for="NewUser.ConfirmPassword" class="col-sm-4 col-form-label fw-bold">
                <span class="text-danger">*</span>Confirm Password
            </label>
            <div class="col-sm-8">
                <input asp-for="NewUser.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label asp-for="NewUser.ContactNo" class="col-sm-4 col-form-label fw-bold">Contact No.</label>
            <div class="col-sm-8">
                <input asp-for="NewUser.ContactNo" class="form-control" />
                <span asp-validation-for="NewUser.ContactNo" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label asp-for="NewUser.NRCNo" class="col-sm-4 col-form-label fw-bold">
                <span class="text-danger">*</span>NRC No.
            </label>
            <div class="col-sm-8">
                <input asp-for="NewUser.NRCNo" class="form-control" />
                <span asp-validation-for="NewUser.NRCNo" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label asp-for="NewUser.Email" class="col-sm-4 col-form-label fw-bold">
                <span class="text-danger">*</span>Email
            </label>
            <div class="col-sm-8">
                <input asp-for="NewUser.Email" type="email" class="form-control" />
                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4 align-items-center">
            <label class="col-sm-4 col-form-label fw-bold">Captcha Image</label>
            <div class="col-sm-8">
                <img src="@Url.Action("GenerateCaptcha")" alt="Captcha Image" class="mb-2" />
                <input asp-for="NewUser.CaptchaCode" class="form-control" placeholder="Enter Captcha" />
                <span asp-validation-for="NewUser.CaptchaCode" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-light" style="min-width: 120px; height: 45px; border-radius: 15px;">Save</button>
            <a asp-action="Login" class="btn btn-light" style="min-width: 120px; height: 45px; border-radius: 15px;">Cancel</a>
        </div>
    </form>
</div>

<div class="d-flex justify-content-center">
    <table class="table table-bordered table-striped mt-4 w-75">
        <thead>
            <tr>
                <th>Name</th>
                <th>Contact No.</th>
                <th>NRC No.</th>
                <th>Email</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.UserList.Count; i++)
            {
                var user = Model.UserList[i];
                <tr id="userRow_@i">
                    <td>@user.UserName</td>
                    <td>@user.ContactNo</td>
                    <td>@user.NRCNo</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

