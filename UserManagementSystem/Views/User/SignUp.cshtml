@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var hasMessage = '@TempData["PopupMessage"]'.trim();
        if (hasMessage !== '') {
            var myModal = new bootstrap.Modal(document.getElementById('popupModal'));
            myModal.show();

            // Auto-scroll to first table row
            const firstRow = document.getElementById("userRow_0");
            if (firstRow) {
                firstRow.scrollIntoView({ behavior: "smooth", block: "center" });
                firstRow.style.backgroundColor = "#e0f7fa"; // highlight effect
                setTimeout(() => {
                    firstRow.style.backgroundColor = ""; // remove highlight after 2s
                }, 2000);
            }
        }
    </script>
}