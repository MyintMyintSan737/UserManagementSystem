<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UserManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm bg-white border-bottom box-shadow mb-0">
            <div class="container-fluid justify-content-center">
                <a class="navbar-brand mx-auto" asp-controller="Home" asp-action="Index">
                    User Management System
                </a>
            </div>
        </nav>
    </header>

    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        var hideMenu = (currentController == "User" && (currentAction == "Login" || currentAction == "Signup" || currentAction == "ResetPassword" || currentAction == "Edit" || currentAction == "Delete"));
    }

    @if (!hideMenu)
    {
        <nav class="bg-light border-bottom menu-bar">
            <div class="container d-flex justify-content-around py-2">
                <a class="menu-item text-decoration-none text-dark fw-medium" asp-controller="Admin" asp-action="Index">Admin Management</a>
                <a class="menu-item text-decoration-none text-dark fw-medium" asp-controller="Client" asp-action="Index">Client Management</a>
                <a class="menu-item text-decoration-none text-dark fw-medium" asp-controller="Transaction" asp-action="Index">Transaction Management</a>
                <a class="menu-item text-decoration-none text-dark fw-medium" asp-controller="Enquiry" asp-action="Index">Enquiry Management</a>
                <a class="menu-item text-decoration-none text-dark fw-medium" asp-controller="Report" asp-action="Index">Reporting Management</a>
            </div>
        </nav>
    }

   

    <main class="container pt-3">
        @RenderBody()
         <div class="modal fade" id="popupModal" tabindex="-1" aria-labelledby="popupModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-center text-black">
                    <h5 class="modal-title" id="popupModalLabel">Message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    @TempData["PopupMessage"]
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    </main>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script>
            var hasMessage = '@TempData["PopupMessage"]'.trim();
            if (hasMessage !== '') {
                var myModal = new bootstrap.Modal(document.getElementById('popupModal'));
                myModal.show();
            }
        </script>
    }
    @RenderSection("Scripts", required: false)

</body>
</html>


